<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#1F405E" />
            <stroke
                android:width="1dp"
                android:color="#1D568A" />
            <corners
                android:radius="3dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1F405E"
                android:endColor="#1D568A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1D568A" />
            <corners
                android:radius="4dp" />
           
        </shape>
    </item>
</selector>