<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!--  Active tab -->
        <item android:state_selected="true" android:state_focused="false"
                android:state_pressed="false" android:drawable="@color/mid_blue" />
        <!--  Inactive tab -->
        <item android:state_selected="false" android:state_focused="false"
                android:state_pressed="false" android:drawable="@drawable/slight_gray" />
        <!--  Pressed tab -->
        <item android:state_pressed="true" android:drawable="@color/mid_blue" />
        <!--  Selected tab (using d-pad) -->
        <item android:state_focused="true" android:state_selected="true"
                android:state_pressed="false" android:drawable="@color/transparent" />
</selector> 
